---
import Layout from "../../layouts/Layout.astro";
import { PresentationView } from "../../components/react/presentation/Presentation";
---

<Layout>
	<main
		class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-blue-900"
	>
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<header class="mb-8">
				<div
					class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6"
				>
					<div class="space-y-2">
						<h1
							class="text-3xl font-titles lg:text-4xl font-bold bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent"
						>
							Sala de Presentación
						</h1>
						<p class="text-gray-300 text-lg font-body">
							Preguntas ciudadanas en tiempo real
						</p>
					</div>

					<!-- Estado en vivo -->
					<div class="flex items-center gap-4">
						<div
							class="flex items-center gap-2 px-4 py-2 bg-red-500/20 backdrop-blur-sm rounded-xl border border-red-400/30"
						>
							<div
								class="size-3 bg-red-400 rounded-full animate-pulse"
							>
							</div>
							<span class="text-red-200 font-medium text-sm">EN VIVO</span>
						</div>
						<div class="text-white/70 text-sm">
							<span class="hidden sm:inline">Sesión iniciada:</span>
							<span class="font-mono">14:00</span>
						</div>
					</div>
				</div>
			</header>
			<PresentationView client:load />
		</div>
	</main>
</Layout>
